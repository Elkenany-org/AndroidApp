<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="120dp"
	app:cardCornerRadius="7dp"
	app:cardUseCompatPadding="true"
	>
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="7dp"
		tools:ignore="UselessLeaf"
		>
		
		<ImageView
			android:id="@+id/small_icon"
			android:layout_width="25sp"
			android:layout_height="25sp"
			android:src="@drawable/ic_logo_elkenany_01"
			tools:ignore="ContentDescription"
			/>
		
		<TextView
			android:id="@+id/app_name_tv"
			android:layout_width="wrap_content"
			android:layout_height="25sp"
			android:layout_marginStart="7dp"
			android:layout_toEndOf="@id/small_icon"
			android:fontFamily="@font/cairo_bold"
			android:gravity="center"
			android:text="@string/app_name"
			android:textColor="@color/green"
			android:textSize="13sp"
			/>
		
		<TextView
			android:id="@+id/push_sent_at"
			android:layout_width="wrap_content"
			android:layout_height="25sp"
			android:layout_alignParentEnd="true"
			android:fontFamily="@font/cairo_regular"
			android:gravity="center"
			android:textColor="@color/green"
			android:textSize="13sp"
			tools:ignore="RelativeOverlap"
			/>
		
		<TextView
			android:id="@+id/push_notification_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/push_sent_at"
			android:layout_marginTop="5dp"
			android:ellipsize="end"
			android:fontFamily="@font/cairo_bold"
			android:gravity="center"
			android:maxLines="1"
			android:textColor="@color/orange"
			android:textSize="16sp"
			/>
		
		<TextView
			android:id="@+id/push_notification_description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/push_notification_title"
			android:layout_marginTop="5dp"
			android:ellipsize="end"
			android:fontFamily="@font/cairo_regular"
			android:gravity="center"
			android:maxLines="2"
			android:textColor="@color/green"
			android:textSize="13sp"
			/>
	</RelativeLayout>
</androidx.cardview.widget.CardView>
