<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	>
	
	<data>
		
		<variable
			name="data"
			type="com.elkenany.entities.shows_data.ShowReviewersData"
			/>
		
		<variable
			name="intrestedPeople"
			type="String"
			/>
		
		
		<variable
			name="clickable"
			type="Boolean"
			/>
	
	</data>
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="10dp"
		>
		
		<TextView
			android:id="@+id/app_bar_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_gravity="center_horizontal"
			android:fontFamily="@font/cairo_bold"
			android:gravity="center_horizontal"
			android:maxLines="1"
			android:text="@string/show_rating_title"
			android:textColor="@color/green"
			android:textSize="20sp"
			/>
		
		<ProgressBar
			android:id="@+id/loading_progressbar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:indeterminateDrawable="@drawable/custom_progress_bar"
			android:visibility="gone"
			/>
		
		<TextView
			android:id="@+id/error_message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:fontFamily="@font/cairo_bold"
			android:gravity="center"
			android:text="@string/failed_to_receive_data_msg"
			android:textColor="@color/green"
			android:textSize="18sp"
			android:visibility="gone"
			/>
		
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/reviewrs_list_recycler_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/app_bar_title"
			android:layout_alignParentEnd="true"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="15dp"
			android:layout_marginEnd="9dp"
			app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
			tools:listitem="@layout/show_reviewers_card_item"
			/>
	
	</RelativeLayout>
</layout>