<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	>
	
	<data>
		
		<variable
			name="data"
			type="com.elkenany.entities.recruitment.Applicant"
			/>
		
		<variable
			name="local"
			type="String"
			/>
		
		<variable
			name="status"
			type="String"
			/>
		
		<variable
			name="clickListener"
			type="com.elkenany.ClickListener"
			/>
	</data>
	
	<androidx.cardview.widget.CardView
		android:id="@+id/card_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="11dp"
		android:layout_marginVertical="5dp"
		android:layoutDirection="rtl"
		card_view:cardCornerRadius="7dp"
		card_view:cardElevation="6dp"
		>
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="@{()->clickListener.onClick(data)}"
			android:orientation="horizontal"
			android:padding="5dp"
			>
			
			
			<ImageView
				android:id="@+id/item_img"
				imageUrl="@{data.image}"
				android:layout_width="75dp"
				android:layout_height="75dp"
				android:layout_marginStart="2dp"
				android:layout_marginTop="2dp"
				android:layout_marginEnd="2dp"
				android:layout_marginBottom="2dp"
				android:scaleType="fitXY"
				tools:ignore="ContentDescription"
				/>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				>
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:padding="5dp"
					>
					
					<TextView
						android:id="@+id/job_name_tv"
						itemText="@{data.name}"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentStart="true"
						android:layout_centerVertical="true"
						android:layout_marginStart="2dp"
						android:layout_marginTop="2dp"
						android:layout_marginEnd="2dp"
						android:layout_marginBottom="2dp"
						android:fontFamily="@font/cairo_bold"
						android:maxLines="1"
						android:textColor="@color/green"
						android:textSize="16sp"
						/>
					
					<View
						android:layout_width="wrap_content"
						android:layout_height="0dp"
						android:layout_toEndOf="@id/job_name_tv"
						/>
				
				
				</RelativeLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="bottom"
					android:padding="5dp"
					>
					
					<TextView
						android:id="@+id/job_desc_tv"
						itemText="@{data.email}"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/cairo_bold"
						android:maxLines="1"
						android:textColor="@color/green"
						android:textSize="12sp"
						/>
					
					<View
						android:id="@+id/view"
						android:layout_width="0dp"
						android:layout_height="0dp"
						android:layout_weight="1"
						tools:ignore="NestedWeights"
						/>
					
					<TextView
						android:id="@+id/job_status_tv"
						android:drawableStart="@drawable/ic_baseline_navigate_next_24"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/cairo_bold"
						android:rotation="180"
						android:maxLines="1"
						android:textColor="@color/orange"
						android:textSize="12sp"
						/>
				
				</LinearLayout>
			</LinearLayout>
		
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</layout>