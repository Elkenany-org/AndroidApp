<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	>
	
	<data>
		
		<variable
			name="data"
			type="com.elkenany.entities.shows_data.Review"
			/>
		
		<variable
			name="date"
			type="String"
			/>
		
		<variable
			name="followers"
			type="String"
			/>
		
		<variable
			name="clickListener"
			type="com.elkenany.ClickListener"
			/>
	</data>
	
	
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="155dp"
		android:layoutDirection="rtl"
		android:onClick="@{()-> clickListener.onClick(data)}"
		app:cardCornerRadius="7dp"
		app:cardUseCompatPadding="true"
		>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			>
			
			<androidx.cardview.widget.CardView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_margin="7dp"
				app:cardCornerRadius="7dp"
				>
				
				<ImageView
					android:id="@+id/show_imgview"
					imageUrl="@{}"
					android:layout_width="100dp"
					android:layout_height="match_parent"
					android:scaleType="fitXY"
					tools:ignore="ContentDescription,ImageContrastCheck"
					/>
			</androidx.cardview.widget.CardView>
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="7dp"
				android:layout_marginVertical="10dp"
				android:gravity="bottom"
				tools:ignore="UselessLeaf"
				>
				
				<TextView
					android:id="@+id/reviwers_name_text_view"
					itemText="@{data.name}"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:ellipsize="end"
					android:fontFamily="@font/cairo_bold"
					android:maxLines="1"
					android:textColor="@color/green"
					android:textSize="14sp"
					tools:ignore="HardcodedText"
					/>
				
				<TextView
					android:id="@+id/email_text_view"
					itemText="@{data.email}"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/reviwers_name_text_view"
					android:layout_marginVertical="7dp"
					android:ellipsize="end"
					android:fontFamily="@font/cairo_regular"
					android:gravity="center_vertical"
					android:maxLines="1"
					android:textColor="@color/green"
					android:textSize="12sp"
					tools:ignore="HardcodedText"
					/>
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_below="@id/email_text_view"
					android:gravity="bottom"
					>
					
					<TextView
						android:id="@+id/opinion_text_view"
						itemText="@{data.desc}"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginHorizontal="2.5dp"
						android:layout_marginVertical="1dp"
						android:drawablePadding="5dp"
						android:fontFamily="@font/cairo_regular"
						android:gravity="center"
						android:maxLines="1"
						android:textColor="@color/green"
						android:textSize="16sp"
						tools:ignore="RelativeOverlap,SmallSp"
						/>
					
					<TextView
						android:id="@+id/date_text_view"
						itemText="@{date}"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentBottom="true"
						android:layout_marginHorizontal="2.5dp"
						android:drawablePadding="5dp"
						android:fontFamily="@font/cairo_regular"
						android:gravity="center"
						android:textColor="@color/green"
						android:textSize="9sp"
						tools:ignore="RelativeOverlap,RtlHardcoded,SmallSp"
						/>
					
					
					<RatingBar
						android:id="@+id/intersted_btn"
						style="@style/Widget.AppCompat.RatingBar.Small"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentEnd="true"
						android:layout_alignParentBottom="true"
						android:layout_marginStart="7dp"
						android:layout_marginEnd="7dp"
						android:layout_marginBottom="1dp"
						android:layoutDirection="ltr"
						android:fontFamily="@font/cairo_regular"
						android:progressTint="@color/orange"
						android:rating="@{data.rate.floatValue()}"
						tools:ignore="RelativeOverlap,TextContrastCheck,TouchTargetSizeCheck"
						/>
				</RelativeLayout>
			</RelativeLayout>
		
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</layout>