<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="image"
            type="String" />

        <variable
            name="name"
            type="String" />

        <variable
            name="email"
            type="String" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".views.menu.MainMenuFragment">

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/app_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cairo_bold"
                android:gravity="center_horizontal"
                android:text="@string/menu_title"
                android:textColor="@color/green"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/user_profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layoutDirection="rtl">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        imageUrl="@{image}"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/gray"
                        tools:ignore="ContentDescription,ImageContrastCheck" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profile_name"
                        itemText="@{name}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:padding="5dp"
                        android:textColor="@color/green"
                        android:textDirection="ltr"
                        android:textSize="14sp"
                        tools:ignore="Autofill,TextFields" />

                    <TextView
                        android:id="@+id/profile_email"
                        itemText="@{email}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:padding="5dp"
                        android:textColor="@color/green"

                        android:textDirection="ltr"
                        android:textSize="14sp"
                        tools:ignore="Autofill,TextFields" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/short_cuts_title"
                android:textSize="20sp"
                app:drawableBottomCompat="@drawable/under_line" />

            <LinearLayout
                android:id="@+id/menu_functions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:gravity="end"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/daily_stock_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableEnd="@drawable/ic_icon_awesome_chart_line"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/daily_stock_title"
                        android:textAlignment="textStart"
                        android:textColor="@color/green"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/guide_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableEnd="@drawable/ic_baseline_book_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/guide_title"
                        android:textAlignment="textStart"
                        android:textColor="@color/green"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/store_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableEnd="@drawable/ic_baseline_store_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/store_title"
                        android:textAlignment="textStart"
                        android:textColor="@color/green"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/news_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableEnd="@drawable/ic_baseline_source_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/news_title"
                        android:textAlignment="textStart"
                        android:textColor="@color/green"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/shows_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableEnd="@drawable/ic_baseline_local_convenience_store_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/shows_title"
                        android:textAlignment="textStart"
                        android:textColor="@color/green"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/magazine_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableEnd="@drawable/ic_baseline_local_library_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/guide_and_magazine_title"
                        android:textAlignment="textStart"
                        android:textColor="@color/green"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/chat_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableEnd="@drawable/ic_baseline_message_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/messages_title"
                        android:textAlignment="textStart"
                        android:textColor="@color/green"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/settings_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableEnd="@drawable/ic_baseline_settings_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/settings_title"
                        android:textAlignment="textStart"
                        android:textColor="@color/green"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/notification_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableEnd="@drawable/ic_baseline_notifications_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/homeNotification"
                        android:textAlignment="textStart"
                        android:textColor="@color/green"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/about_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableEnd="@drawable/ic_baseline_help_outline_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/about_title"
                        android:textAlignment="textStart"
                        android:textColor="@color/green"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/share_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableEnd="@drawable/ic_baseline_share_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/share_title"
                        android:textAlignment="textStart"
                        android:textColor="@color/green"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/rate_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableEnd="@drawable/ic_baseline_star_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/rating_title"
                        android:textAlignment="textStart"
                        android:textColor="@color/green"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sign_out_btn"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/primary_btn_shape"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/logout_title"
                    android:textColor="@color/green" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sign_in_btn"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/primary_btn_shape"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/sign_in_title"
                    android:textColor="@color/green"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>