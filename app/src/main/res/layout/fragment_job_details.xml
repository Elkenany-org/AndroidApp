<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	>
	
	<data>
		
		<variable
			name="data"
			type="com.elkenany.entities.recruitment.JobDetailsData"
			/>
	</data>
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="10sp"
		>
		
		<TextView
			android:id="@+id/app_bar_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_gravity="center_horizontal"
			android:fontFamily="@font/cairo_bold"
			android:gravity="center_horizontal"
			android:text="@string/job_title"
			android:textColor="@color/green"
			android:textSize="20sp"
			/>
		
		<ProgressBar
			android:id="@+id/loading_progressbar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:indeterminateDrawable="@drawable/custom_progress_bar"
			android:visibility="gone"
			/>
		
		<TextView
			android:id="@+id/error_message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:fontFamily="@font/cairo_bold"
			android:gravity="center"
			android:text="@string/failed_to_receive_data_msg"
			android:textColor="@color/green"
			android:textSize="18sp"
			android:visibility="gone"
			/>
		
		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/app_bar_title"
			>
			
			<LinearLayout
				android:id="@+id/layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				>
				
				<androidx.cardview.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:layout_marginHorizontal="5dp"
					android:layout_marginTop="20dp"
					android:layout_marginBottom="10dp"
					android:elevation="7dp"
					android:layoutDirection="rtl"
					android:padding="10dp"
					app:cardCornerRadius="7dp"
					>
					
					<LinearLayout
						android:id="@+id/job_layout"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						>
						
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="5dp"
							tools:ignore="UselessParent"
							>
							
							<ImageView
								android:id="@+id/job_image_view"
								imageUrl="@{data.images}"
								android:layout_width="90dp"
								android:layout_height="90dp"
								tools:ignore="ContentDescription"
								/>
							
							<LinearLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center_vertical"
								android:layout_marginHorizontal="10dp"
								android:orientation="vertical"
								tools:ignore="UselessLeaf"
								>
								
								<TextView
									android:id="@+id/job_title_text_view"
									itemText="@{data.title}"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_margin="2dp"
									android:fontFamily="@font/cairo_black"
									android:maxLines="1"
									android:textColor="@color/green"
									android:textSize="20sp"
									/>
								
								<TextView
									android:id="@+id/company_title_text_view"
									itemText="@{data.companyName}"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_margin="2dp"
									android:fontFamily="@font/cairo_regular"
									android:maxLines="1"
									android:textColor="@color/green"
									android:textSize="16sp"
									/>
							</LinearLayout>
						</LinearLayout>
						
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:padding="5dp"
							tools:ignore="UselessParent"
							>
							
							<TableLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="vertical"
								>
								
								<TableRow android:padding="1dp">
									
									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:drawablePadding="2dp"
										android:fontFamily="@font/cairo_regular"
										android:paddingHorizontal="5dp"
										android:text="@string/job_title_title"
										android:textColor="@color/gray"
										android:textSize="16sp"
										app:drawableStartCompat="@drawable/ic_baseline_circle_24"
										tools:ignore="TooDeepLayout,TextContrastCheck"
										/>
									
									<TextView
										itemText="@{data.workHours}"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:fontFamily="@font/cairo_regular"
										android:maxLines="1"
										android:paddingHorizontal="5dp"
										android:textColor="@color/green"
										android:textSize="14sp"
										/>
								
								</TableRow>
								
								<TableRow android:padding="1dp">
									
									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:drawablePadding="2dp"
										android:fontFamily="@font/cairo_regular"
										android:paddingHorizontal="5dp"
										android:text="@string/company_title"
										android:textColor="@color/gray"
										android:textSize="16sp"
										app:drawableStartCompat="@drawable/ic_baseline_circle_24"
										tools:ignore="TextContrastCheck"
										/>
									
									<TextView
										itemText="@{data.companyName}"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:fontFamily="@font/cairo_regular"
										android:maxLines="1"
										android:paddingHorizontal="5dp"
										android:textColor="@color/green"
										android:textSize="14sp"
										/>
								</TableRow>
								
								<TableRow android:padding="1dp">
									
									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:drawablePadding="2dp"
										android:fontFamily="@font/cairo_regular"
										android:paddingHorizontal="5dp"
										android:text="@string/expected_salary_title"
										android:textColor="@color/gray"
										android:textSize="16sp"
										app:drawableStartCompat="@drawable/ic_baseline_circle_24"
										tools:ignore="TextContrastCheck"
										/>
									
									<TextView
										itemText="@{data.salary.toString()}"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:fontFamily="@font/cairo_regular"
										android:maxLines="1"
										android:paddingHorizontal="5dp"
										android:textColor="@color/green"
										android:textSize="14sp"
										/>
								</TableRow>
								
								<TableRow android:padding="1dp">
									
									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:drawablePadding="2dp"
										android:fontFamily="@font/cairo_regular"
										android:paddingHorizontal="5dp"
										android:text="@string/experience_title"
										android:textColor="@color/gray"
										android:textSize="16sp"
										app:drawableStartCompat="@drawable/ic_baseline_circle_24"
										tools:ignore="TextContrastCheck"
										/>
									
									<TextView
										itemText="@{data.experience}"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:fontFamily="@font/cairo_regular"
										android:maxLines="1"
										android:paddingHorizontal="5dp"
										android:textColor="@color/green"
										android:textSize="14sp"
										/>
								</TableRow>
							</TableLayout>
						
						</LinearLayout>
					</LinearLayout>
				</androidx.cardview.widget.CardView>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					android:layoutDirection="rtl"
					android:orientation="vertical"
					>
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/cairo_black"
						android:paddingHorizontal="5dp"
						android:text="@string/job_description_title"
						android:textColor="@color/green"
						android:textSize="16sp"
						tools:ignore="TextContrastCheck"
						/>
					
					<TextView
						itemText="@{data.desc.toString()}"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginVertical="10dp"
						android:fontFamily="@font/cairo_regular"
						android:justificationMode="inter_word"
						android:paddingHorizontal="5dp"
						android:textColor="@color/green"
						android:textSize="12sp"
						tools:ignore="TextContrastCheck"
						tools:targetApi="o"
						/>
				</LinearLayout>
				
				<androidx.appcompat.widget.AppCompatButton
					android:id="@+id/apply_now_btn"
					android:layout_width="195dp"
					android:layout_height="45dp"
					android:layout_gravity="center_horizontal"
					android:layout_marginVertical="5dp"
					android:background="@drawable/primary_btn_shape"
					android:fontFamily="@font/cairo_black"
					android:text="@string/apply_now_title"
					android:textColor="@color/green"
					tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck"
					/>
			</LinearLayout>
		</ScrollView>
	
	</RelativeLayout>
</layout>