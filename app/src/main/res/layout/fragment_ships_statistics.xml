<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	>
	
	<data>
	
	</data>
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="10dp"
		tools:context=".views.local_stock.StatisticsFragment"
		>
		
		<TextView
			android:id="@+id/app_bar_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_gravity="center_horizontal"
			android:fontFamily="@font/cairo_bold"
			android:gravity="center_horizontal"
			android:text="@string/statistics_title"
			android:textColor="@color/green"
			android:textSize="20sp"
			/>
		
		<LinearLayout
			android:id="@+id/layout1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/app_bar_title"
			android:layout_marginStart="15dp"
			android:layout_marginTop="15dp"
			android:layout_marginEnd="15dp"
			android:gravity="center_vertical"
			android:layoutDirection="rtl"
			>
			
			<ImageButton
				android:id="@+id/image"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:background="@drawable/primary_btn_shape"
				android:clickable="false"
				android:src="@drawable/ic_baseline_date_range_24"
				tools:ignore="ContentDescription,SpeakableTextPresentCheck"
				/>
			
			<TextView
				android:id="@+id/calender_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10sp"
				android:fontFamily="@font/cairo_bold"
				android:text="@string/select_date_title"
				android:textColor="@color/green"
				android:textSize="16sp"
				/>
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/layout2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/layout1"
			android:layout_marginStart="25sp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="25sp"
			android:gravity="center_vertical"
			android:layoutDirection="rtl"
			android:orientation="horizontal"
			>
			
			<TextView
				android:id="@+id/date_from_title"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_marginStart="15dp"
				android:layout_marginEnd="15dp"
				android:layout_weight="1"
				android:fontFamily="@font/cairo_bold"
				android:gravity="center"
				android:text="@string/from_title"
				android:textColor="@color/green"
				android:textSize="16sp"
				/>
			
			<TextView
				android:id="@+id/date_to_title"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_marginStart="15dp"
				android:layout_marginEnd="15dp"
				android:layout_weight="1"
				android:fontFamily="@font/cairo_bold"
				android:gravity="center"
				android:text="@string/to_title"
				android:textColor="@color/green"
				android:textSize="16sp"
				/>
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/layout3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/layout2"
			android:layout_marginStart="25sp"
			android:layout_marginEnd="25sp"
			android:layout_marginBottom="15dp"
			android:gravity="center_vertical"
			android:layoutDirection="rtl"
			android:orientation="horizontal"
			>
			
			<TextView
				android:id="@+id/date_from_tv"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_marginStart="15dp"
				android:layout_marginEnd="15dp"
				android:layout_weight="1"
				android:background="@drawable/primary_btn_shape"
				android:fontFamily="@font/cairo_bold"
				android:gravity="center"
				android:text="@string/unknown_title"
				android:textColor="@color/green"
				tools:ignore="TextContrastCheck"
				/>
			
			<TextView
				android:id="@+id/date_to_tv"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_marginStart="15dp"
				android:layout_marginEnd="15dp"
				android:layout_weight="1"
				android:background="@drawable/primary_btn_shape"
				android:fontFamily="@font/cairo_bold"
				android:gravity="center"
				android:text="@string/unknown_title"
				android:textColor="@color/green"
				tools:ignore="TextContrastCheck"
				/>
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/fodder_external_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/layout3"
			android:baselineAligned="false"
			android:gravity="center_vertical"
			android:layoutDirection="rtl"
			android:orientation="vertical"
			android:paddingHorizontal="12dp"
			tools:ignore="UselessLeaf"
			>
			
			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				app:cardBackgroundColor="@color/orange"
				app:cardCornerRadius="7dp"
				>
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					>
					
					<TextView
						android:id="@+id/country_btn_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:drawablePadding="5dp"
						android:fontFamily="@font/cairo_bold"
						android:paddingTop="5dp"
						android:text="@string/select_country_title"
						android:textAlignment="center"
						android:textColor="@color/green"
						android:textSize="13sp"
						app:drawableStartCompat="@drawable/ic_company"
						tools:ignore="TextContrastCheck"
						/>
					
					<com.google.android.material.textfield.TextInputLayout
						android:id="@+id/country_btn"
						style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_below="@id/country_btn_tv"
						android:layout_marginHorizontal="5dp"
						app:boxBackgroundColor="@color/orange"
						app:boxCornerRadiusBottomEnd="20dp"
						app:boxCornerRadiusBottomStart="20dp"
						app:boxCornerRadiusTopEnd="20dp"
						app:boxCornerRadiusTopStart="20dp"
						app:boxStrokeWidth="0dp"
						app:boxStrokeWidthFocused="0dp"
						>
						
						<AutoCompleteTextView
							android:id="@+id/country_auto_compelete"
							android:layout_width="match_parent"
							android:layout_height="25sp"
							android:ellipsize="end"
							android:fontFamily="@font/cairo_bold"
							android:gravity="center"
							android:inputType="none"
							android:maxLines="1"
							android:paddingTop="1dp"
							android:paddingBottom="5dp"
							android:singleLine="true"
							android:textColor="@color/green"
							android:textSize="10sp"
							tools:ignore="LabelFor,SmallSp,SpeakableTextPresentCheck,TouchTargetSizeCheck"
							/>
					</com.google.android.material.textfield.TextInputLayout>
				</RelativeLayout>
			</androidx.cardview.widget.CardView>
			
			<View
				android:layout_width="0dp"
				android:layout_height="10dp"
				/>
			
			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				app:cardBackgroundColor="@color/orange"
				app:cardCornerRadius="7dp"
				>
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					>
					
					<TextView
						android:id="@+id/select_product_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:drawablePadding="5dp"
						android:fontFamily="@font/cairo_bold"
						android:gravity="center_vertical"
						android:paddingTop="5dp"
						android:text="@string/select_product_title"
						android:textColor="@color/green"
						android:textSize="13sp"
						app:drawableStartCompat="@drawable/ic_baseline_format_list_bulleted_24"
						tools:ignore="TextContrastCheck"
						/>
					
					<com.google.android.material.textfield.TextInputLayout
						android:id="@+id/product_btn"
						style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_below="@id/select_product_tv"
						android:layout_marginHorizontal="5dp"
						app:boxBackgroundColor="@color/orange"
						app:boxCornerRadiusBottomEnd="20dp"
						app:boxCornerRadiusBottomStart="20dp"
						app:boxCornerRadiusTopEnd="20dp"
						app:boxCornerRadiusTopStart="20dp"
						app:boxStrokeWidth="0dp"
						app:boxStrokeWidthFocused="0dp"
						>
						
						<AutoCompleteTextView
							android:id="@+id/product_auto_compelete"
							android:layout_width="match_parent"
							android:layout_height="25sp"
							android:ellipsize="end"
							android:fontFamily="@font/cairo_bold"
							android:gravity="center"
							android:inputType="none"
							android:maxLines="1"
							android:paddingTop="1dp"
							android:paddingBottom="5dp"
							android:singleLine="true"
							android:textColor="@color/green"
							android:textSize="10sp"
							tools:ignore="LabelFor,SmallSp,SpeakableTextPresentCheck,TouchTargetSizeCheck"
							/>
					</com.google.android.material.textfield.TextInputLayout>
				</RelativeLayout>
			</androidx.cardview.widget.CardView>
		</LinearLayout>
		
		
		<RelativeLayout
			android:id="@+id/found_data_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/fodder_external_layout"
			android:layout_margin="15dp"
			>
			
			<ProgressBar
				android:id="@+id/loading_progressbar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:indeterminateDrawable="@drawable/custom_progress_bar"
				/>
			
			<TextView
				android:id="@+id/error_message"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:fontFamily="@font/cairo_bold"
				android:gravity="center"
				android:text="@string/failed_to_receive_data_msg"
				android:textColor="@color/green"
				android:textSize="18sp"
				android:visibility="gone"
				/>
			
			<androidx.cardview.widget.CardView
				android:id="@+id/card_view"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:elevation="7dp"
				app:cardCornerRadius="7dp"
				app:cardUseCompatPadding="true"
				>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:layoutDirection="rtl"
					android:orientation="horizontal"
					android:padding="2dp"
					>
					
					
					<TextView
						android:id="@+id/comp_name"
						android:layout_width="100dp"
						android:layout_height="wrap_content"
						android:fontFamily="@font/cairo_bold"
						android:gravity="center"
						android:maxLines="2"
						android:padding="5dp"
						android:text="@string/name_title"
						android:textColor="@color/green"
						android:textSize="10sp"
						tools:ignore=",SmallSp"
						/>
					
					<View
						android:layout_width="0dp"
						android:layout_height="0dp"
						android:layout_weight="1"
						/>
					
					<TextView
						android:id="@+id/prod_name"
						android:layout_width="100dp"
						android:layout_height="wrap_content"
						android:fontFamily="@font/cairo_bold"
						android:gravity="center"
						android:maxLines="2"
						android:padding="5dp"
						android:text="@string/made_in_title"
						android:textColor="@color/green"
						android:textSize="10sp"
						tools:ignore=",SmallSp,TextContrastCheck"
						/>
					
					<View
						android:layout_width="0dp"
						android:layout_height="0dp"
						android:layout_weight="1"
						/>
					
					<TextView
						android:id="@+id/prod_type"
						android:layout_width="100dp"
						android:layout_height="wrap_content"
						android:fontFamily="@font/cairo_bold"
						android:gravity="center"
						android:maxLines="2"
						android:padding="5dp"
						android:text="@string/weight_ton_title"
						android:textColor="@color/green"
						android:textSize="10sp"
						tools:ignore=",SmallSp"
						/>
				
				</LinearLayout>
			</androidx.cardview.widget.CardView>
			
			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/statistics_recycler_view"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_below="@id/card_view"
				android:layout_marginTop="2dp"
				android:layoutAnimation="@anim/layout_animation"
				android:orientation="vertical"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
				tools:listitem="@layout/statistics_row_item"
				/>
		
		</RelativeLayout>
	</RelativeLayout>
</layout>