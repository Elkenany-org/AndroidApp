<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:cardView="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	>
	
	<data>
		<!--this data made for clickListener-->
		<variable
			name="data"
			type="Object"
			/>
		<!--this data made for displaying title in text view-->
		<variable
			name="title"
			type="String"
			/>
		<!--this data made for displaying url string into image view-->
		<variable
			name="url"
			type="String"
			/>
		<!--this data made for setting date into its text view-->
		<variable
			name="location"
			type="String"
			/>
		
		<variable
			name="createdAt"
			type="String"
			/>
		
		<variable
			name="locale"
			type="String"
			/>
		
		<variable
			name="price"
			type="String"
			/>
		
		<!--this clicklistener made to execute the clicklistener function-->
		<variable
			name="clickListener"
			type="com.elkenany.ClickListener"
			/>
	
	</data>
	
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="120dp"
		android:layout_margin="5dp"
		android:layoutDirection="rtl"
		android:onClick="@{()-> clickListener.onClick(data)}"
		cardView:cardCornerRadius="10dp"
		cardView:cardElevation="7dp"
		>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			>
			
			<androidx.cardview.widget.CardView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				app:cardCornerRadius="5dp"
				>
				
				<ImageView
					android:id="@+id/item_image"
					imageUrl="@{url}"
					android:layout_width="100dp"
					android:layout_height="match_parent"
					android:scaleType="fitXY"
					tools:ignore="ContentDescription,ImageContrastCheck"
					/>
			</androidx.cardview.widget.CardView>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:orientation="vertical"
				>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layoutDirection="rtl"
					android:orientation="horizontal"
					android:padding="5dp"
					>
					
					<TextView
						android:id="@+id/main_title"
						itemText="@{title}"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_weight="1"
						android:fontFamily="@font/cairo_bold"
						android:gravity="start"
						android:maxLines="1"
						android:textColor="@color/green"
						android:textSize="18sp"
						android:textStyle="bold"
						/>
					
					<TextView
						android:id="@+id/main_price"
						itemText="@{price + locale}"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/cairo_bold"
						android:textColor="@color/dark_red"
						android:textSize="20sp"
						android:textStyle="bold"
						/>
				</LinearLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layoutDirection="ltr"
					android:orientation="vertical"
					android:padding="5dp"
					>
					
					<TextView
						android:id="@+id/main_location"
						itemText="@{location}"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:fontFamily="@font/cairo_regular"
						android:textColor="@color/green"
						android:textSize="13sp"
						android:drawablePadding="5dp"
						app:drawableEndCompat="@drawable/stroke_location"
						/>
				
				
				</LinearLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layoutDirection="rtl"
					android:orientation="horizontal"
					android:padding="5dp"
					>
					
					<TextView
						android:id="@+id/know_more"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						/>
					
					<TextView
						android:id="@+id/main_date"
						itemText="@{createdAt}"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:fontFamily="@font/cairo_regular"
						android:textAlignment="textEnd"
						android:textColor="@color/green"
						android:textSize="13sp"
						/>
				</LinearLayout>
			</LinearLayout>
		
		</LinearLayout>
	</androidx.cardview.widget.CardView>

</layout>