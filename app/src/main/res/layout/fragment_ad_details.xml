<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.example.elkenany.entities.store.AdsDetailsData" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10sp">

        <TextView
            android:id="@+id/app_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/cairo_bold"
            android:text="@string/ad_details_title"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/loading_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/cairo_bold"
            android:text="@string/failed_to_receive_data_msg"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/app_bar_title">

            <LinearLayout
                android:id="@+id/ads_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp">

                    <RelativeLayout
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/ad_image"
                            imageUrl="@{data.images[0].image}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            tools:ignore="ContentDescription,ImageContrastCheck" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            app:cardBackgroundColor="@color/orange">

                            <TextView
                                android:id="@+id/product_price"
                                itemText="@{data.salary.toString()}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cairo_bold"
                                android:paddingStart="10sp"
                                android:paddingTop="7dp"
                                android:paddingEnd="10sp"
                                android:paddingBottom="7dp"
                                android:textColor="@color/green"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="20sp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="7sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/ad_location"
                            itemText="@{data.address}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/cairo_regular"
                            android:gravity="center_vertical"
                            android:textColor="@color/green"
                            android:textSize="12sp"
                            app:drawableEndCompat="@drawable/ic_baseline_location_on_24" />

                        <TextView
                            android:id="@+id/ad_description"
                            itemText="@{data.desc}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/cairo_bold"
                            android:gravity="center_vertical"
                            android:textColor="@color/green"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10sp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="7sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/cairo_bold"
                            android:gravity="center_vertical"
                            android:text="@string/contact_information_title"
                            android:textColor="@color/green"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/ad_phone"
                            itemText="@{data.phone}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/cairo_bold"
                            android:textAlignment="textEnd"
                            android:textColor="@color/green"
                            android:textSize="12sp"
                            app:drawableEndCompat="@drawable/ic_baseline_phone_android_24" />

                        <TextView
                            android:id="@+id/ad_location2"
                            itemText="@{data.address}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/cairo_bold"
                            android:gravity="center_vertical"
                            android:textColor="@color/green"
                            android:textSize="12sp"
                            app:drawableEndCompat="@drawable/ic_baseline_location_on_24" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/chatting_btn"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/primary_btn_shape"
                            android:fontFamily="@font/cairo_bold"
                            android:text="@string/talk_to_seller_title" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/more_ads_title"
                    android:textColor="@color/green"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/more_news_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/store_card_view_item" />

                <TextView
                    android:id="@+id/no_more_news_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/no_more_news_title"
                    android:textColor="@color/green"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>