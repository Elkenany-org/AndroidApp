<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="30dp"
        tools:context=".views.RegisterFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/cairo_regular"
            android:text="@string/create_account_title"
            android:textColor="@color/green"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="248dp"
            android:layout_height="141dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/register_logo"
            tools:ignore="ContentDescription" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="7dp">

            <EditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/primary_edit_text_shape"
                android:fontFamily="@font/cairo_bold"
                android:hint="@string/name_title"
                android:padding="10dp"
                android:textAlignment="textEnd"
                android:textDirection="ltr"
                android:textSize="14sp"
                tools:ignore="Autofill,TextFields" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="7dp">

            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/primary_edit_text_shape"
                android:fontFamily="@font/cairo_bold"
                android:hint="@string/email_title"
                android:padding="10dp"
                android:textAlignment="textEnd"
                android:textDirection="ltr"
                android:textSize="14sp"
                tools:ignore="Autofill,TextFields" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="7dp">

            <EditText
                android:id="@+id/phone_input"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/primary_edit_text_shape"
                android:fontFamily="@font/cairo_bold"
                android:hint="@string/phone_title"
                android:padding="10dp"
                android:textAlignment="textEnd"
                android:textDirection="ltr"
                android:textSize="14sp"
                tools:ignore="Autofill,TextFields" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="7dp">

            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/primary_edit_text_shape"
                android:drawableStart="@drawable/ic_baseline_remove_red_eye_24"
                android:fontFamily="@font/cairo_bold"
                android:hint="@string/password_title"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textAlignment="textEnd"
                android:textSize="14sp"
                tools:ignore="Autofill,TextFields" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="7dp">

            <EditText
                android:id="@+id/confirm_password_input"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/primary_edit_text_shape"
                android:drawableStart="@drawable/ic_baseline_remove_red_eye_24"
                android:fontFamily="@font/cairo_bold"
                android:hint="@string/confirm_password_title"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textAlignment="textEnd"
                android:textSize="14sp"
                tools:ignore="Autofill,TextFields" />
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_up_btn"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/primary_btn_shape"
            android:fontFamily="@font/cairo_black"
            android:text="@string/sing_in_title"
            android:textColor="@color/green" />

        <ProgressBar
            android:id="@+id/loading_progressbar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cairo_black"
            android:text="@string/sign_in_with_title"
            android:textColor="@color/orange"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/google_signup_btn"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/google_btn_shape"
                android:foreground="@drawable/g_logo"
                android:foregroundGravity="center" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/facebook_signup_btn"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/facebook_btn_shape"
                android:foreground="@drawable/f_logo"
                android:foregroundGravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/have_account_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/cairo_bold"
            android:text="@string/have_account_title"
            android:textColor="@color/green"
            android:textSize="12sp"
            tools:ignore="SmallSp" />
    </LinearLayout>
</layout>