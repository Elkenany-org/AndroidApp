<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="30dp"
            android:paddingEnd="30dp"
            tools:context=".views.auth.RegisterFragment">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cairo_regular"
                android:gravity="center_horizontal"
                android:text="@string/create_account_title"
                android:textColor="@color/green"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="248dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/register_logo"
                tools:ignore="ContentDescription" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="7dp">

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/primary_edit_text_shape"
                    android:fontFamily="@font/cairo_bold"
                    android:hint="@string/name_title"
                    android:padding="10dp"
                    android:textAlignment="textEnd"
                    android:textDirection="ltr"
                    android:textSize="14sp"
                    tools:ignore="Autofill,TextFields,TextContrastCheck" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="7dp">

                <EditText
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/primary_edit_text_shape"
                    android:fontFamily="@font/cairo_bold"
                    android:hint="@string/email_title"
                    android:padding="10dp"
                    android:textAlignment="textEnd"
                    android:textDirection="ltr"
                    android:textSize="14sp"
                    tools:ignore="Autofill,TextFields,TextContrastCheck" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="7dp">

                <EditText
                    android:id="@+id/phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/primary_edit_text_shape"
                    android:fontFamily="@font/cairo_bold"
                    android:hint="@string/phone_title"
                    android:padding="10dp"
                    android:textAlignment="textEnd"
                    android:textDirection="ltr"
                    android:textSize="14sp"
                    tools:ignore="Autofill,TextFields,TextContrastCheck" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

<!--                    <ImageButton-->
<!--                        android:id="@+id/password_visibilty_btn"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_margin="5dp"-->
<!--                        android:background="@color/white"-->
<!--                        android:src="@drawable/ic_baseline_remove_red_eye_24"-->
<!--                        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />-->

                    <EditText
                        android:id="@+id/password_input"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/primary_edit_text_shape"
                        android:fontFamily="@font/cairo_bold"
                        android:hint="@string/password_title"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"
                        tools:ignore="Autofill,TextFields,TextContrastCheck,DuplicateSpeakableTextCheck" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

<!--                    <ImageButton-->
<!--                        android:id="@+id/confirm_password_visibilty_btn"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_margin="5dp"-->
<!--                        android:background="@color/white"-->
<!--                        android:src="@drawable/ic_baseline_remove_red_eye_24"-->
<!--                        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />-->

                    <EditText
                        android:id="@+id/confirm_password_input"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/primary_edit_text_shape"
                        android:fontFamily="@font/cairo_bold"
                        android:hint="@string/password_title"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"
                        tools:ignore="Autofill,TextFields,TextContrastCheck" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sign_up_btn"
                android:layout_width="195dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/primary_btn_shape"
                android:fontFamily="@font/cairo_black"
                android:text="@string/sign_in_title"
                android:textColor="@color/green"
                tools:ignore="TouchTargetSizeCheck" />

            <ProgressBar
                android:id="@+id/loading_progressbar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:indeterminateDrawable="@drawable/custom_progress_bar"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cairo_black"
                android:text="@string/sign_in_with_title"
                android:textColor="@color/orange"
                android:textSize="13sp"
                tools:ignore="TextContrastCheck" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/google_signup_btn"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/google_btn_shape"
                    android:foreground="@drawable/g_logo"
                    android:foregroundGravity="center"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/facebook_signup_btn"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/facebook_btn_shape"
                    android:foreground="@drawable/f_logo"
                    android:foregroundGravity="center"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/have_account_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/have_account_title"
                android:textColor="@color/green"
                android:textSize="12sp"
                tools:ignore="SmallSp" />
        </LinearLayout>
    </ScrollView>
</layout>