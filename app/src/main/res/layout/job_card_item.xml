<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	>
	
	<data>
		
		<variable
			name="data"
			type="com.elkenany.entities.recruitment.JobDaum"
			/>
		
		<variable
			name="local"
			type="String"
			/>
		
		<variable
			name="bookMarkIt"
			type="com.elkenany.ClickListener"
			/>
		
		<variable
			name="clickListener"
			type="com.elkenany.ClickListener"
			/>
	</data>
	
	<androidx.cardview.widget.CardView
		android:id="@+id/card_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="5dp"
		android:layout_marginEnd="5dp"
		android:layout_marginBottom="5dp"
		android:layoutDirection="rtl"
		card_view:cardCornerRadius="7dp"
		card_view:cardElevation="5dp"
		>
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="@{()->clickListener.onClick(data)}"
			android:orientation="horizontal"
			android:padding="5dp"
			>
			
			
			<ImageView
				android:id="@+id/item_img"
				imageUrl="@{data.image}"
				android:layout_width="75dp"
				android:layout_height="75dp"
				android:layout_marginStart="2dp"
				android:layout_marginTop="2dp"
				android:layout_marginEnd="2dp"
				android:layout_marginBottom="2dp"
				android:scaleType="fitXY"
				tools:ignore="ContentDescription"
				/>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				>
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:padding="5dp"
					>
					
					<TextView
						android:id="@+id/job_name_tv"
						itemText="@{data.title}"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentStart="true"
						android:layout_centerVertical="true"
						android:layout_marginStart="2dp"
						android:layout_marginTop="2dp"
						android:layout_marginEnd="2dp"
						android:layout_marginBottom="2dp"
						android:fontFamily="@font/cairo_bold"
						android:maxLines="1"
						android:textColor="@color/green"
						android:textSize="16sp"
						/>
					
					<View
						android:layout_width="wrap_content"
						android:layout_height="0dp"
						android:layout_toStartOf="@id/book_mark_btn"
						android:layout_toEndOf="@id/job_name_tv"
						/>
					
					<ImageView
						android:id="@+id/book_mark_btn"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentEnd="true"
						android:layout_centerVertical="true"
						android:layout_marginStart="2dp"
						android:layout_marginTop="2dp"
						android:layout_marginEnd="2dp"
						android:layout_marginBottom="2dp"
						android:background="@color/transparent_color"
						android:foregroundGravity="center"
						android:onClick="@{()-> bookMarkIt.onClick(data)}"
						android:padding="3sp"
						android:src="@drawable/ic_baseline_bookmark_border_24"
						tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck"
						/>
				</RelativeLayout>
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="bottom"
					android:padding="5dp"
					>
					
					<TextView
						android:id="@+id/job_desc_tv"
						itemText="@{data.companyName}"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentStart="true"
						android:layout_centerVertical="true"
						android:layout_marginStart="2dp"
						android:layout_marginTop="2dp"
						android:layout_marginEnd="2dp"
						android:layout_marginBottom="2dp"
						android:layout_toStartOf="@id/job_salary_tv"
						android:fontFamily="@font/cairo_bold"
						android:maxLines="1"
						android:textColor="@color/green"
						android:textSize="12sp"
						/>
					
					<View
						android:layout_width="wrap_content"
						android:layout_height="0dp"
						android:layout_toStartOf="@id/job_salary_tv"
						android:layout_toEndOf="@id/job_desc_tv"
						/>
					<TextView
						android:id="@+id/job_salary_tv"
						itemText="@{data.salary.toString()+local}"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentEnd="true"
						android:layout_centerVertical="true"
						android:layout_marginStart="2dp"
						android:layout_marginTop="2dp"
						android:layout_marginEnd="2dp"
						android:layout_marginBottom="2dp"
						android:fontFamily="@font/cairo_regular"
						android:maxLines="1"
						android:textColor="@color/orange"
						android:textSize="12sp"
						/>
				</RelativeLayout>
			</LinearLayout>
		
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</layout>