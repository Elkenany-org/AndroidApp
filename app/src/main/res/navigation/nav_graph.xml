<?xml version="1.0" encoding="utf-8"?>
<navigation
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	app:startDestination="@id/loginFragment"
	>
	<fragment
		android:id="@+id/loginFragment"
		android:name="com.elkenany.views.auth.LoginFragment"
		android:label="fragment_login"
		tools:layout="@layout/fragment_login"
		>
		<action
			android:id="@+id/action_loginFragment_to_registerFragment"
			app:destination="@id/registerFragment"
			app:enterAnim="@anim/custom_enter_animation"
			app:exitAnim="@anim/custom_exit_animation"
			app:popEnterAnim="@anim/custom_pop_enter_animation"
			app:popExitAnim="@anim/custom_pop_exit_animation"
			app:popUpTo="@id/loginFragment"
			app:popUpToInclusive="true"
			/>
		<action
			android:id="@+id/action_loginFragment_to_homeFragment"
			app:destination="@id/homeFragment"
			app:enterAnim="@anim/custom_enter_animation"
			app:exitAnim="@anim/custom_exit_animation"
			app:popEnterAnim="@anim/custom_pop_enter_animation"
			app:popExitAnim="@anim/custom_pop_exit_animation"
			app:popUpTo="@id/loginFragment"
			app:popUpToInclusive="true"
			/>
		<action
			android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
			app:destination="@id/forgotPasswordFragment"
			app:enterAnim="@anim/custom_enter_animation"
			app:exitAnim="@anim/custom_exit_animation"
			app:popEnterAnim="@anim/custom_pop_enter_animation"
			app:popExitAnim="@anim/custom_pop_exit_animation"
			/>
	</fragment>
	<fragment
		android:id="@+id/registerFragment"
		android:name="com.elkenany.views.auth.RegisterFragment"
		android:label="RegisterFragment"
		tools:layout="@layout/fragment_register"
		>
		<action
			android:id="@+id/action_registerFragment_to_loginFragment"
			app:destination="@id/loginFragment"
			app:enterAnim="@anim/custom_enter_animation"
			app:exitAnim="@anim/custom_exit_animation"
			app:popEnterAnim="@anim/custom_pop_enter_animation"
			app:popExitAnim="@anim/custom_pop_exit_animation"
			app:popUpTo="@id/registerFragment"
			app:popUpToInclusive="true"
			/>
		<action
			android:id="@+id/action_registerFragment_to_homeFragment"
			app:destination="@id/homeFragment"
			app:enterAnim="@anim/custom_enter_animation"
			app:exitAnim="@anim/custom_exit_animation"
			app:popEnterAnim="@anim/custom_pop_enter_animation"
			app:popExitAnim="@anim/custom_pop_exit_animation"
			app:popUpTo="@id/registerFragment"
			app:popUpToInclusive="true"
			/>
	</fragment>
	<fragment
		android:id="@+id/homeFragment"
		android:name="com.elkenany.views.home.HomeFragment"
		android:label="fragment_home"
		tools:layout="@layout/fragment_home"
		>
		<action
			android:id="@+id/action_homeFragment_to_loginFragment"
			app:destination="@id/loginFragment"
			app:enterAnim="@anim/custom_enter_animation"
			app:exitAnim="@anim/custom_exit_animation"
			app:popEnterAnim="@anim/custom_pop_enter_animation"
			app:popExitAnim="@anim/custom_pop_exit_animation"
			app:popUpTo="@id/homeFragment"
			app:popUpToInclusive="true"
			/>
		<action
			android:id="@+id/action_homeFragment_to_popUpAdFragment"
			app:destination="@id/popUpAdFragment"
			/>
	</fragment>
	<fragment
		android:id="@+id/forgotPasswordFragment"
		android:name="com.elkenany.views.auth.ForgotPasswordFragment"
		android:label="ForgotPasswordFragment"
		tools:layout="@layout/fragment_forgot_password"
		>
		<action
			android:id="@+id/action_forgotPasswordFragment_to_homeFragment"
			app:destination="@id/homeFragment"
			app:enterAnim="@anim/custom_enter_animation"
			app:exitAnim="@anim/custom_exit_animation"
			app:popEnterAnim="@anim/custom_pop_enter_animation"
			app:popExitAnim="@anim/custom_pop_exit_animation"
			app:popUpTo="@id/forgotPasswordFragment"
			app:popUpToInclusive="true"
			/>
	</fragment>
	<fragment
		android:id="@+id/popUpAdFragment"
		android:name="com.elkenany.views.popup.PopUpAdFragment"
		android:label="PopUpAdFragment"
		tools:layout="@layout/fragment_pop_up_ad"
		>
		<action
			android:id="@+id/action_popUpAdFragment_to_homeFragment"
			app:destination="@id/homeFragment"
			app:enterAnim="@anim/custom_enter_animation"
			app:exitAnim="@anim/custom_exit_animation"
			app:popEnterAnim="@anim/custom_pop_enter_animation"
			app:popExitAnim="@anim/custom_pop_exit_animation"
			/>
		<argument
			android:name="link"
			app:argType="string"
			/>
	</fragment>
</navigation>